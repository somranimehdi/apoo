{% extends "base.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('/styles/stories.css' ) }}">
	<style>
	.fav{
		margin-top : 1%;
		margin-bottom:30px;

		float: right;
	}
	</style>
{% endblock %}

{% block body %}

<title>
	{% block title %}Apoo! | Stories{% endblock %}
</title>

	<script src="https://kit.fontawesome.com/b99e675b6e.js"></script>

	<div class="wrapper">
		<h2>Stories
		</h2>
		<br>
		<br>
		{% for row in stories %}
			<div class="gallery">
				<a href="{{row.StoryLink}}" target="_blank">
					<img src="{{ asset( row.PreviewLink ) }}">
				</a>
				<div class="desc">{{row.StoryTitle}} | <a href="/like/{{row.id}}" class="">Save it</a></div>
				
				
				<br><br>
			</div>

		{% endfor %}


	</div>
</div>{% endblock %}
